doc.local, ttt72.local  {

    # auto_https off

	# Формируем самоподписной сертификат для работы https
	tls internal

    php_fastcgi ttt72_laravel:9000
    # reverse_proxy ttt72_laravel:9000
    file_server
    encode gzip

    root /storage /srv/storage/public
    root * /srv/public

}

